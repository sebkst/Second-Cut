Public Sub showDirChooser()  
  Dim d As Window
  Dim dd As DirChooser
  Dim db As Button
  Dim vb As VBox
  Print CInt(Now)
  
  d = New Window
  d.Move(0, 0, 500, 500)
  vb = New VBox(d)
  vb.AutoResize = True
  vb.Show
  dd = New DirChooser(vb)
  db = New Button(vb) As "closebtn"
  db.Resize(d.ClientW, 50)
  db.Text = "OK"
  dd.Resize(d.ClientW, d.ClientH - 50)
  dd.Show '
  db.Show
  d.show
  'Dim g As FRecMEncoder = New FRecMEncoder
  'g.Show  
End
