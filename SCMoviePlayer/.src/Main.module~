Public Sub v4l2deviceIsFree(name As String) As Boolean
  Dim video As VideoDevice
  Try video = New VideoDevice(name)
  If Error Then Return False
  Print "new vdev"
  'not working
'  Try video.Image.Picture
  If Error Then Return False
  Print "get image"
  Try video.Close
  If Error Then Return False
  Print "close"
  video = Null 
  If Error Then Return False
  Return True
End



