          Background = &H000000&
          Foreground = &HFFFFFF&
          Text = ("2x")
          Picture = Picture["icon:/huge/play"]
        }
        { !btnRec Button
          MoveScaled(62,0,7,7)
          #Public = True
          Enabled = False
          Background = &H000000&
          Foreground = &HFFFFFF&
          ToolTip = ("record")
          Picture = Picture["icon:/huge/record"]
        }
        { !btnSaveDir Button
          MoveScaled(70,0,7,7)
